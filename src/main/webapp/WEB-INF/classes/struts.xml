<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="default" namespace ="/" extends="struts-default">
        <action name="Login">
            <result>views/login/login.jsp</result>
        </action>
        <action name="LoginProcess" class="heavenpark.controller.login.LoginCheck">
            <result name="success">views/welcomeUser.jsp</result>
            <result name="failed">views/login/login.jsp</result>
        </action>
        <action name="Welcome" class="heavenpark.controller.LinkAction">
            <result name="success">views/welcomeUser.jsp</result>
        </action>
    </package>
</struts>